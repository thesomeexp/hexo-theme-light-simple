#sidebar
  font-size 16px
  width 270px
  margin 0 auto
  width 100%
  line-height 1.8em
  .widget
    background #fff
    box-shadow 1px 2px 3px #ddd
    margin-bottom 20px
    word-wrap break-word
    border-radius: 12px
    .title
      padding 15px 20px
      font-size 1em
      border-bottom 1px solid color-border
      font-weight normal

    .entry
      font-size 0.9em
      padding 15px 20px

    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

  .search
    margin-bottom 30px
    input
      background #fff
      font-family font-title
      font-style italic
      font-size 1em
      padding 10px 15px
      border 1px solid color-border
      width 100%
      box-sizing border-box
      color color-meta
      &:focus
        color color-font

  .tag
    small
      margin-left 0px
      margin-right 10px
      color color-meta
      &:before
        content '('
      &:after
        content ')'
    li
      display inline

  .tagcloud
    .entry
      padding-right 5px
    a
      margin-right 10px
      display inline-block

  .footer
      background #fff
      font-family font-title
      font-style italic
      font-size 0.8em
      padding 10px 15px
      border 1px solid color-border
      width 100%
      box-sizing border-box
      color color-meta